<div class="hidden sm:flex justify-between h-16 items-center">
  <!-- 左側：ロゴ / トップリンク -->
  <div class="flex flex-shrink-0 items-center gap-4">
    <%= link_to 'Top', root_path, class: "text-xl font-bold text-gray-800 hover:text-gray-900" %>
    <%= link_to 'Tweet', tweets_path, class: "text-xl font-bold text-gray-800 hover:text-gray-900" %>
    <%= link_to 'Chat', chat_index_path, class: "text-xl font-bold text-gray-800 hover:text-gray-900" %>
  </div>

  <!-- 右側リンク：デスクトップ -->
  <div class="flex items-center gap-4">
    <% if user_signed_in? %>
      <%= link_to current_user.email, edit_user_registration_path, class: "bg-gray-300 hover:bg-gray-200 text-gray-500 font-semibold px-2 py-1 rounded transition" %>
      <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "bg-red-100 hover:bg-red-200 text-gray-500 font-semibold px-2 py-1 rounded transition" %>
    <% else %>
      <%= link_to 'Login', new_user_session_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-2 py-1 rounded transition" %>
      <%= link_to 'Sign up', new_user_registration_path, class: "bg-green-500 hover:bg-green-600 text-white font-semibold px-2 py-1 rounded transition" %>
    <% end %>
  </div>
</div>