<!-- Flash Messages -->
<% if notice %>
  <p class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 my-3 rounded mb-4 w-full max-w-md text-center">
    <%= notice %>
  </p>
<% end %>

<% if alert %>
  <p class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 my-3 rounded mb-4 w-full max-w-md text-center">
    <%= alert %>
  </p>
<% end %>