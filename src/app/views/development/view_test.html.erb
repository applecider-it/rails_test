<%= form_with model: @form, url: development_view_test_post_path do |f| %>

  <div class="mt-5">
    <%= f.label :list_val, "リスト動作確認" %>
    <%= f.select :list_val, @list_vals.map { |k, v| [v, k] }, { prompt: "選択してください" } %>
  </div>

  <div class="mt-5">
    <%= f.label :list_val, "ラジオボタン動作確認" %>
    <% @radio_vals.each do |key, value| %>
      <%= f.label :"radio_val_#{key}" do %>
        <%= f.radio_button :radio_val, key %>
        <%= value %>
      <% end %>
    <% end %>
  </div>

  <div class="mt-5">
    <%= f.label :datetime_val, "日時動作確認" %>
    <%= f.datetime_local_field :datetime_val, class: "app-form-input w-auto" %>
  </div>

  <div class="mt-5">
    <%= f.submit "送信", class: "app-btn-primary" %>
  </div>

<% end %>