<h1 class="app-h1">ツイート一覧</h1>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <div class="mb-5">
      <%= render "row", tweet: tweet %>

      <%= link_to "参照", tweet_path(tweet), class: "app-link-normal" %>
    </div>
  <% end %>
</div>

<div class="mt-5">
  <%= paginate @tweets %>
</div>

<div class="mt-10">
  <%= link_to "新規作成", new_tweet_path, class: "app-btn-primary" %>
</div>
