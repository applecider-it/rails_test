<h2 class="app-h2">ツイート変更確認</h2>

<%= form_with(model: @tweet, url: tweet_path(@tweet), scope: :tweet) do |form| %>
  <%= render "confirm", form: form, tweet: @tweet %>

  <div class="my-2">
    <%= form.submit "戻る", class: "app-btn-primary w-40", name: "back" %>
    <%= form.submit class: "app-btn-primary w-40" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "参照", tweet_path(@tweet), class: "app-link-normal" %> |
  <%= link_to "一覧", tweets_path, class: "app-link-normal" %>
</div>
