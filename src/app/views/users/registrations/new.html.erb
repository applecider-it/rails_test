<h2 class="app-h2">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "shared/message/error_messages", resource: resource %>

  <div class="my-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "app-form-input" %>
  </div>

  <div class="my-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "app-form-input" %>
  </div>

  <div class="my-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "app-form-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "app-btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
