<h1 class="app-h1">Change your password</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "shared/message/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="my-3">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "app-form-input" %>
  </div>

  <div class="my-3">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "app-form-input" %>
  </div>

  <div class="my-3">
    <%= f.submit "Change my password", class: "app-btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
